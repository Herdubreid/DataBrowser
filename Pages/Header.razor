@inherits E1BaseComponent
@inject JsService  Js

<div class="navbar fixed-top navbar-light bg-light">
    <div class="col">
        @if  (State.Authenticated)
        {
            <p>
                @State.E1Context.Name : Welcome, @State.E1Context?.AuthResponse?.userInfo.alphaName you're logged into @State.E1Context?.AuthResponse?.environment
            </p>
        }
        else
        {
            <em>Logged out!</em>
        }
    </div>
    <div class="col-auto">
        <button class="btn btn-warning btn-sm" @onclick="@Logout"><i class="fas fa-sign-out-alt"></i></button>
    </div>
</div>

@code {
    protected async Task Logout() => await Mediator.Send(new AppState.LogoutAction());
}
